@model Model.ViewModels.FlashCard.VmFlashCard

@{
    ViewBag.Title = Model["Edit Flash Card"];
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


@using (Html.BeginForm("efc", "flashcard", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Front, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Front, new { @class = "form-control", @cols = 100, @rows = 4 })
                @Html.ValidationMessageFor(model => model.Front, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Back, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Back, new { @class = "form-control", @cols = 100, @rows = 4 })
                @Html.ValidationMessageFor(model => model.Back, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
